\newenvironment{tasks}[1][]
  {\enumerate[#1]\setuptasks}
  {\endenumerate}

\newif\ifmoditem
\newcommand{\setuptasks}{%
  \global\moditemfalse
  \let\origmakelabel\makelabel
  \def\moditem##1{\global\moditemtrue\def\mesymbol{##1}\item}%
  \def\makelabel##1{%
    \origmakelabel{##1\ifmoditem\rlap{\mesymbol}\fi\enspace}%
    \global\moditemfalse}%
}
